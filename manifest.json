{
  "manifest_version": 2,
  "name": "Email Reminders",
  "version": "0.2.0",
  "default_locale": "en",
  "description": "Set reminders for emails with Outlook-style notifications",
  "author": "Michal Hajduczenia",

  "browser_specific_settings": {
    "gecko": {
      "id": "email-reminders@mhajduczenia.dev",
      "strict_min_version": "91.0"
    }
  },

  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "menus",
    "messagesRead",
    "accountsRead"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_title": "Email Reminders",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    },
    "default_popup": "popup/popup.html"
  },

  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
